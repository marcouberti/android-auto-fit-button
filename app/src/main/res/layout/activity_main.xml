<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.marcouberti.autofitbutton.app.MainActivity">

    <com.marcouberti.autofitbutton.AutoFitButton
        android:layout_below="@+id/normal"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textSize="90sp"
        custom:minTextSize="3sp"
        android:drawableLeft="@mipmap/ic_launcher"
        android:drawableRight="@mipmap/ic_launcher"
        android:text="TWO DRAWABLES"/>


    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <com.marcouberti.autofitbutton.AutoFitButton
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="26sp"
            android:drawableLeft="@mipmap/ic_launcher"
            android:text="ONE DRAWABLE"/>
        <com.marcouberti.autofitbutton.AutoFitButton
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="NO DRAWABLES"/>
        <com.marcouberti.autofitbutton.AutoFitButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:text="VERY SMALL"/>
    </LinearLayout>

    <com.marcouberti.autofitbutton.AutoFitButton
        android:layout_below="@+id/normal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="40sp"
        android:drawableRight="@mipmap/ic_launcher"
        android:text="RIGHT DRAWABLE"/>
</LinearLayout>
